{
  "name": "backend",
  "version": "0.0.1",
  "description": "back-end standard environment.",
  "private": true,
  "main": "index.js",
  "scripts": {
    "clean": "npx shx rm -rf ./build ./radata",
    "prebuild": "npm run clean;npx shx mkdir -p ./build",
    "build": "npx npm-run-all -l -p build:*",
    "build:js": "npx shx cp -r *.js ./build",
    "build:json": "npx shx cp -r *.json ./build",
    "build:assets": "npx shx cp -r assets ./build",
    "build:lib": "npx shx cp -r lib ./build",
    "start": "node index.js",
    "dev": "nodemon --watch \"./\" --exec \"node index.js\"",
    "test": "mocha test/*.test.js --exit --timeout=20000",
    "unlock": "npx npm-run-all -l -p unlock:*",
    "unlock:package": "find . -name package-lock.json | xargs rm -f",
    "unlock:yarn": "find . -name yarn.lock | xargs rm -f"
  },
  "engines": {
    "node": ">=14"
  },
  "author": "nautilus.",
  "license": "Private",
  "dependencies": {
    "@usertoken/memory": "0.0.1",
    "bonjour": "^3.5.0",
    "circular-append-file": "^1.0.1",
    "debug": "^4.3.1",
    "eventemitter3": "^4.0.7",
    "express": "4.17.1",
    "gun": "0.2020.301",
    "hyperswarm": "2.15.3",
    "jszmq": "^0.1.2",
    "network-address": "^1.1.2",
    "peer": "0.6.1",
    "public-ip": "^4.0.4",
    "pump": "^3.0.0",
    "quick-lru": "5.1.1",
    "shelljs": "0.8.4",
    "sodium-plus": "0.9.0",
    "speedometer": "^1.1.0",
    "thunky": "^1.1.0",
    "unordered-set": "^2.0.1",
    "winston": "3.3.3",
    "ws": "7.4.6"
  },
  "devDependencies": {
    "jshint": "^2.7.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3",
    "tape": "^5.2.2"
  }
}
